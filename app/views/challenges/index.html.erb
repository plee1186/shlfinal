<p id="notice"><%= notice %></p>

<h1>Listing Challenges</h1>

<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Difficulty</th>
      <!--<th>Description</th>-->
      <!--<th>Restaurant</th>-->
      <!--<th>Address</th>-->
      <th>City</th>
      <th>State</th>
      <!--<th>Zip</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= link_to challenge.name, challenge %></td>
        <td><%= challenge.difficulty %></td>
        <!--<td><%#= challenge.description %></td>-->
        <!--<td><%#= challenge.restaurant %></td>-->
        <!--<td><%#= challenge.address %></td>-->
        <td><%= challenge.city %></td>
        <td><%= challenge.state %></td>
        <!--<td><%#= challenge.zip %></td>-->
        <!--<td><%#= link_to 'Show', challenge %></td>-->
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

