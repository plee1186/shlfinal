<div>
    You are here!
    <p>Email: <%= @user.email %></p>
    <p>Challenges Completed: <%= @user.cc %></p>
    
<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Difficulty</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= link_to challenge.name, challenge %></td>
        <td><%= challenge.difficulty %></td>
        <td><%= challenge.city %></td>
        <td><%= challenge.state %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
    <%#= simple_form_for(@user) do |f| %>
        <%#= f.input :name %>
        <%#= f.association :challenges,:collection => @challenges.user.collect{ |p| [p.name, p.id] }, :as => :check_boxes %>
        <%#= f.button :submit %>
    <%# end %>
</div>
